<%= simple_form_for @booking, :html => { :class => "form-horizontal booking" } do |f| %>

  <%= f.association :restaurant %>
  <%= f.input :date %>
  <%= f.input :num_person, in: 1..20 %>
  <%= f.input :discount_id, label: "Discount Id", hint: "this is a test hint" %>
  <%= f.input :user_id, label: "User Id" %>
  <br />
  <%= f.button :submit, :class => 'btn btn-primary' %>

<% end %>
