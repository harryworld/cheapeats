<h1>Listing restaurants</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Cuisine</th>
      <th>Address</th>
      <th>Phone</th>
      <th>Lat</th>
      <th>Long</th>
      <th>Description</th>
      <th>Rating</th>
      <th>Price range</th>
      <th>Img url1</th>
      <th>Img url2</th>
      <th>Img url3</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @restaurants.each do |restaurant| %>
      <tr>
        <td><%= restaurant.name %></td>
        <td><%= restaurant.cuisine %></td>
        <td><%= restaurant.address %></td>
        <td><%= restaurant.phone %></td>
        <td><%= restaurant.lat %></td>
        <td><%= restaurant.long %></td>
        <td><%= restaurant.description %></td>
        <td><%= restaurant.rating %></td>
        <td><%= restaurant.price_range %></td>
        <td><%= restaurant.img_url1 %></td>
        <td><%= restaurant.img_url2 %></td>
        <td><%= restaurant.img_url3 %></td>
        <td><%= link_to 'Show', restaurant %></td>
        <td><%= link_to 'Edit', edit_restaurant_path(restaurant) %></td>
        <td><%= link_to 'Destroy', restaurant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

