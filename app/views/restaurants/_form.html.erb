<%= simple_form_for @restaurant, :html => { :class => "form-horizontal restaurant" } do |f| %>

  <%= f.input :name %>
  <%= f.input :cuisine %>
  <%= f.input :address %>
  <%= f.input :district %>
  <%= f.input :phone %>
  <%= f.input :lat %>
  <%= f.input :lng %>
  <%= f.input :description %>
  <%= f.input :rating %>
  <%= f.input :price_range %>
  <%= f.input :img_url1 %>
  <%= f.input :img_url2 %>
  <%= f.input :img_url3 %>

  <br />
  <%= f.button :submit, :class => 'btn btn-primary' %>

<% end %>
