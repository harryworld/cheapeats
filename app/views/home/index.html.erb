<div class="row" ng-controller="HomeCtrl">

  <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">

    <div class="panel panel-default" ng-repeat="r in restaurants">
      <div class="panel-heading" role="tab" id="heading{{ r.id }}">
        <h4 class="panel-title">
          <a data-toggle="collapse" data-parent="#accordion" href="#collapse{{ r.id }}" aria-expanded="true" aria-controls="collapse{{ r.id }}">
            {{ r.name }} <span class="pull-right">Cuisine: {{ r.cuisine }}</span>
          </a>
        </h4>
      </div>
      <div id="collapse{{ r.id }}" class="panel-collapse collapse" ng-class="getClass($index)" role="tabpanel" aria-labelledby="heading{{ r.id }}">
        <div class="panel-body">
          <div class="row">
            <div class="col-xs-6">
              <div class="thumbnail">
                <img ng-src="{{ getImage(r.img_url1) }}" alt="" class="img-responsive">
              </div>
            </div>
            <div class="col-xs-6">
              <div class="thumbnail">
                <img ng-src="{{ getImage(r.img_url2) }}" alt="" class="img-responsive">
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-xs-12">
              <span class="pull-right">{{ r.rating }} star rating</span>
              {{ r.district }}, {{ r.address }}
            </div>
          </div>
          <div class="row">
            <div class="more-space col-xs-12">
              <div class="panel panel-success">
                <div class="panel-body">
                  <div class="pull-left text-center">
                    <h5>50% &nbsp; &nbsp; &nbsp; 45% &nbsp; &nbsp; &nbsp; 35%</h5>
                    <div class="btn-group" data-toggle="buttons">
                      <label class="btn btn-success active">
                        <input type="radio" name="options" id="option1" autocomplete="off" checked> 3:30pm
                      </label>
                      <label class="btn btn-success">
                        <input type="radio" name="options" id="option2" autocomplete="off"> 4pm
                      </label>
                      <label class="btn btn-success">
                        <input type="radio" name="options" id="option3" autocomplete="off"> 4:30pm
                      </label>
                    </div>
                  </div>


                  <div class="pull-right text-center">
                    <h5>Choose a time</h5>
                    <button type="button" class="btn btn-danger">
                      Book now <i class="fa fa-chevron-circle-right"></i>
                    </button>
                  </div>
                </div>
              </div>
            </div>
          </div><!-- .row -->
        </div>
      </div>
    </div><!-- .panel -->

  </div><!-- #accordion.panel-group -->

</div>
